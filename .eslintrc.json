{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-var":"error",
        "object-shorthand":"error",
        "quotes": [
            "error",
            "double"
        ],
        "prefer-template": "error",
        "wrap-iife": [
            "error",
            "outside"
        ],
        "prefer-arrow-callback": "error",
        "arrow-spacing": "error",
        "no-duplicate-imports": "error",
        "prefer-const": "error"
    }
}